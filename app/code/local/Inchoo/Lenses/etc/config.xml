<?xml version="1.0"?>

<config>
    <modules>
        <Inchoo_Lenses>
            <version>0.1.0</version>
        </Inchoo_Lenses>
    </modules>
    
    <global>
        <blocks>
            <lenses>
                <class>Inchoo_Lenses_Block</class>
            </lenses>
        </blocks>

        <models>
            <lenses>
				<class>Inchoo_Lenses_Model</class>		
            </lenses>
        </models>    
        
        <resources>
            <lenses_setup>
                <setup>
                    <module>Inchoo_Lenses</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </lenses_setup>
		</resources>        
        
        <catalog>
            <product>
                <type>
                    <lenses translate="label" module="catalog">
                        <label>Lenses</label>
                        <model>lenses/product_type_cp</model>
                        <is_qty>1</is_qty>
                        <index_data_retreiver>lenses/catalogIndex_data_cp</index_data_retreiver>
                        <price_model>lenses/product_price</price_model>
                        <composite>0</composite>
                    </lenses>
                </type>
			</product>        
        </catalog>
	</global>  
	
	<adminhtml>
         <layout>
            <updates>
                <lenses>
                    <file>lenses.xml</file>
                </lenses>
            </updates>
        </layout>

		<events>
			<catalog_product_new_action>
			    <observers>
			        <lenses_observer_catalog_product_new_action>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoCatalogProductNewAction</method>
			        </lenses_observer_catalog_product_new_action>
			    </observers>
			</catalog_product_new_action>
			<catalog_product_edit_action>
			    <observers>
			        <lenses_observer_catalog_product_edit_action>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoCatalogProductEditAction</method>
			        </lenses_observer_catalog_product_edit_action>
			    </observers>
			</catalog_product_edit_action>			
            <catalog_product_prepare_save>
                <observers>
                	<lenses_observer_catalog_product_prepare_save>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoCatalogProductPrepareSave</method>
			        </lenses_observer_catalog_product_prepare_save>
                </observers>
            </catalog_product_prepare_save>
            <catalog_product_delete_before>
                <observers>
                	<lenses_observer_catalog_product_delete_before>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoCatalogProductDeleteBefore</method>
			        </lenses_observer_catalog_product_delete_before>
                </observers>
            </catalog_product_delete_before>            
            <catalog_product_save_after>
                <observers>
                	<lenses_observer_catalog_product_save_after>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoCatalogProductSaveAfter</method>
			        </lenses_observer_catalog_product_save_after>
                	<lenses_observer_catalog_product_save_after_tab>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>saveProductTabData</method>
			        </lenses_observer_catalog_product_save_after_tab>
                </observers>
            </catalog_product_save_after>
            <catalog_product_status_update>
                <observers>
                	<lenses_observer_catalog_product_status_update>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoCatalogProductStatusUpdate</method>
			        </lenses_observer_catalog_product_status_update>
                </observers>
            </catalog_product_status_update>            
            
            
            
            
            <sales_order_item_save_after>
                <observers>
                	<lenses_observer_sales_order_item_save_after>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoSalesOrderItemSaveAfter</method>
			        </lenses_observer_sales_order_item_save_after>
                </observers>
            </sales_order_item_save_after>
            <sales_order_save_before>
                <observers>
                	<lenses_observer_sales_order_save_before>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoSalesOrderSaveBefore</method>
			        </lenses_observer_sales_order_save_before>
                </observers>
            </sales_order_save_before>            
            <sales_order_save_after>
                <observers>
                	<lenses_observer_sales_order_save_after>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoSalesOrderSaveAfter</method>
			        </lenses_observer_sales_order_save_after>
                </observers>
            </sales_order_save_after>
            <catalogrule_before_apply>
                <observers>
                	<lenses_observer_catalogrule_before_apply>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoCatalogruleBeforeApply</method>
			        </lenses_observer_catalogrule_before_apply>
                </observers>
            </catalogrule_before_apply>
            <catalogrule_after_apply>
                <observers>
                	<lenses_observer_catalogrule_after_apply>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoCatalogruleAfterApply</method>
			        </lenses_observer_catalogrule_after_apply>
                </observers>
            </catalogrule_after_apply>
            <catalog_entity_attribute_save_after>
                <observers>
                	<lenses_observer_catalog_entity_attribute_save_after>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoCatalogEntityAttributeSaveAfter</method>
			        </lenses_observer_catalog_entity_attribute_save_after>
                </observers>
            </catalog_entity_attribute_save_after>
            <catalog_product_delete_after_done>
                <observers>
                	<lenses_observer_catalog_product_delete_after_done>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoCatalogProductDeleteAfterDone</method>
			        </lenses_observer_catalog_product_delete_after_done>
                </observers>
            </catalog_product_delete_after_done>

            <customer_login>
                <observers>
                	<lenses_observer_customer_login>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoCustomerLogin</method>
			        </lenses_observer_customer_login>
                </observers>
            </customer_login>
            <customer_logout>
                <observers>
                	<lenses_observer_customer_logout>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoCustomerLogout</method>
			        </lenses_observer_customer_logout>
                </observers>
            </customer_logout>
            <sales_quote_save_after>
                <observers>
                	<lenses_observer_sales_quote_save_after>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoSalesQuoteSaveAfter</method>
			        </lenses_observer_sales_quote_save_after>
                </observers>
            </sales_quote_save_after>
            <catalog_product_collection_load_after>
                <observers>
                	<lenses_observer_catalog_product_collection_load_after>
			            <type>singleton</type>
			            <class>lenses/observer</class>
			            <method>hookIntoCatalogProductCollectionLoadAfter</method>
			        </lenses_observer_catalog_product_collection_load_after>
                </observers>
            </catalog_product_collection_load_after>
		</events>
	</adminhtml>
	  
</config>
